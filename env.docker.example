# MySQL 数据库配置
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=fastadmin
MYSQL_USER=fastadmin
MYSQL_PASSWORD=fastadmin123

# 数据库连接配置（用于 FastAdmin .env 文件）
# 这些值会在容器内使用，hostname 应该是服务名 'mysql'
DATABASE_TYPE=mysql
DATABASE_HOSTNAME=mysql
DATABASE_HOSTPORT=3306
DATABASE_DATABASE=fastadmin
DATABASE_USERNAME=fastadmin
DATABASE_PASSWORD=fastadmin123
DATABASE_PREFIX=fa_
DATABASE_CHARSET=utf8mb4

# Redis 配置
# 注意：容器内使用端口 6379，宿主机使用端口 7000（避免 Windows 端口保留范围冲突）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# 应用配置
APP_DEBUG=true
APP_TRACE=false

